<?xml version="1.0" encoding="UTF-8"?>
<application xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="artifactml.xsd" lang="en">
  <title>Calculator</title>
  <main>
    <display id="display" aria-live="polite"></display>
    <keypad>
      <button value="1">1</button>
      <button value="2">2</button>
      <button value="3">3</button>
      <button value="4">4</button>
      <button value="5">5</button>
      <button value="6">6</button>
      <button value="7">7</button>
      <button value="8">8</button>
      <button value="9">9</button>
      <button value="0">0</button>
      <button value="+">+</button>
      <button value="-">-</button>
      <button value="*">*</button>
      <button value="/">/</button>
      <button value=".">.</button>
      <button class="clear" value="clear">Clear</button>
      <button class="calculate" value="calculate">=</button>
    </keypad>
  </main>
</application>
